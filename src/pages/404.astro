---
import BaseLayout from "../layouts/BaseLayout.astro";
import "../css/index.css";
const title = "404 - page";
const description =
	"Ekeopre Beredugo is a frontend web developer that specializes in creating quality high converting websites.";
const author = "Ekeopre Beredugo";
---

<BaseLayout title={title} description={description} author={author}>
	<main class="wrapper" id="404-wrapper">
		<img
			src="/assets/img/oops-404-error-with-broken-robot-concept-illustration/3828537.jpg"
			alt=""
		/>
		<h1 class="404-heading">PAGE NOT FOUND</h1>
		<p class="about-me">
			The page that you are looking for does not exist. <br />
			<a class="go-to-home" href="/">Go to homepage</a>
		</p>
	</main>
</BaseLayout>

<style>
	main {
		display: flex;
		justify-content: center;
		flex-direction: column;
		padding: 5% 0;
		align-items: center;

		text-align: center;
	}

	main img {
		width: 300px;
		height: 300px;
	}

	@media (max-width: 375px) {
		main {
			padding: 20% 2%;
		}
	}

	main h1 {
		font-family: "Archivo Black";
		font-size: 2rem;
	}

	main p {
		font-size: 1.2rem;
	}
	main p a {
		font-size: 1.5rem;
		color: #3535c4;
		text-decoration: underline;
	}
</style>
