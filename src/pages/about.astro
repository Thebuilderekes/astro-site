<style>   
* {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
  }
  
  
  html{
  width: 100%;
  }

body {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
    width: 100%;
    height: 100%;
  }



  @media (min-width:300px){

    .container {
      padding: 20% 3rem;
    }
  }
  
@media (min-width:600px){

  .container {
    padding: 10% 3rem;
  }
}



.container h1 {
  background: #0A1926;
    background: linear-gradient(to right, #0A1926 0%, #3535C4 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
      margin: 0 50px;
      font-family: 'Archivo Black';
      font-size: 3rem;
  }

  @media (max-width: 800px){

    .container h1 {

      font-size: 30px;
    }
  }
</style>