---
import MyAboutPage from '../layouts/MyAboutPage.astro';
import BaseHead from '../components/BaseHead.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
const title = "About";
---

<BaseHead title = {title}>
</BaseHead>
<BaseLayout>
<MyAboutPage>

<main class="container">
            <h1>About me </h1>
            <p> I'm a frontend web developer based in Bayelsa, Nigeria and I have been building websites for almost 2 years. I grew up in Lagos Nigeria and later went on to acquire a degree in computer Science from Rivers state University in southern Nigeria. Whenever I'm not building websites or experimenting with web technologies, I create content on social media around web development and productivity. I've been a huge fan of online web development communities and I enjoy answering questions and helping people solve their web development problems. </p>
                      
</main>


</MyAboutPage>
</BaseLayout>

<style>   
* {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
  }
  
  
/* archivo-black-regular - latin */
@font-face {
  font-family: 'Archivo Black';
  font-style: normal;
  font-weight: 400;
  src: url('/assets/fonts/archivo-black-v17-latin/archivo-black-v17-latin-regular.eot'); /* IE9 Compat Modes */
  src: local(''),
       url('/assets/fonts/archivo-black-v17-latin/archivo-black-v17-latin-regular.eot?#iefix') format('embedded-opentype'), /* IE6-IE8 */
       url('/assets/fonts/archivo-black-v17-latin//archivo-black-v17-latin-regular.woff2') format('woff2'), /* Super Modern Browsers */
       url('/assets/fonts/archivo-black-v17-latin/archivo-black-v17-latin-regular.woff') format('woff'), /* Modern Browsers */
       url('/assets/fonts/archivo-black-v17-latin//archivo-black-v17-latin-regular.ttf') format('truetype'), /* Safari, Android, iOS */
       url('/assets/fonts/archivo-black-v17-latin//archivo-black-v17-latin-regular.svg#ArchivoBlack') format('svg'); /* Legacy iOS */
}

  
  html{
  width: 100%;
  }

body {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
    width: 100%;
    height: 100%;
  }

  .container h1 {
  background: #0A1926;
    background: linear-gradient(to right, #0A1926 0%, #3535C4 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
      margin: 0 50px;
      font-family: 'Archivo Black';
      text-transform: uppercase;
      font-size: 3rem;
  }

  @media (max-width: 800px){

    .container h1 {

      font-size: 30px;
    }
  }

@media (min-width: 800px){

  .container p {

    font-size: 18px;
   
  }

  .container p  a {
color: red;
text-decoration: underline;
}
}

  @media (min-width:300px){

    .container {
      padding: 20% 3rem;
    }
  }
  
@media (min-width:600px){

  .container {
    padding: 10% 3rem;
  }
}




</style>