---
import BaseLayout from "../layouts/BaseLayout.astro";
import "../css/index.css";
import "../css/animationDuration.css";
const title = "About - Ekeopre Beredugo";
const description =
	"Ekeopre Beredugo is a frontend web developer that specializes in creating quality high converting websites.";
const author = "Ekeopre Beredugo";
const scrollToTop = "#about";
---

<BaseLayout
	title={title}
	description={description}
	author={author}
	scrollToTop={scrollToTop}
>
	<section class="about-section" id="about">
		<div class="text-container">
			<h1
				class="about-heading title animate__animated animate__fadeInUp delay-1"
			>
				About me
			</h1>
			<p
				class="about-me large-text animate__animated animate__fadeInUp delay-2"
			>
				I'm a front-end developer based in Nigeria.
			</p>

			<h2 class="animate__animated animate__fadeInUp delay-2">TLDR about me</h2>
			<ul class="animate__animated animate__fadeInUp delay-4">
				<li>
					Confident in my ability to learn, understand and communicate ideas and
					tasks.
				</li>

				<li>Passionate about aesthethics and design.</li>
				<li>Available for full-time or freelance work.</li>
				<li>Willing to relocate for the right opportunity.</li>
			</ul>

			<h2 class="animate__animated animate__fadeInUp delay-6">
				What motivates me
			</h2>
			<p class="about-me animate__animated animate__fadeInUp delay-6">
				I enjoy building websites, I enjoy the process of taking a design and
				making it come to life on the web and it is incredibly satisfying to see
				something I've created being used by others.
			</p>
			<br />
			<p class="about-me animate__animated animate__fadeInUp delay-6">
				I love learning, and because front-end development landscape is
				constantly evolving, there is always something new to learn. I enjoy
				staying up-to-date on the latest trends and technologies so that I can
				build the best possible experiences for anyone who visits the websites
				that I build.
			</p>

			<a
				class="go-to-home-link animate__animated animate__fadeInUp delay-6"
				href="/">Go to homepage</a
			>
		</div>
		<!-- <ThemeSwitcher /> -->
	</section>
</BaseLayout>

<style>
	html {
		width: 100%;
	}

	body {
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		width: 100%;
	}

	@media (min-width: 1200px) {
		.text-container {
			max-width: 60%;
		}
	}

	.about-section {
		background-color: var(--light-grey-color);
		max-width: 100%;
	}

	.about-section.dark {
		background-color: var(--darker-green-color);
		color: var(--light-grey-color);
	}

	@media (min-width: 600px) {
		.about-section {
			padding: 10% 3rem;
		}
	}
	.about-section h1 {
		margin: 20px auto;
		font-family: "Archivo Black";
		text-transform: uppercase;
		font-size: var(--fs-large);
	}

	@media (max-width: 1250px) {
		.about-section h1 {
			font-size: var(--fs-semi-large);
		}
	}
	@media (max-width: 820px) {
		.about-section {
			padding: 5% 0;
		}
		.about-section h1 {
			font-size: var(--fs-semi-large);
		}
	}

	@media (max-width: 599px) {
		.about-section {
			padding: 30% 1.5rem 1.5rem 1.5rem;
		}
		.about-section h1 {
			font-size: var(--fs-semi-medium);
		}
	}

	.about-section h2 {
		margin: 20px auto;
		font-family: "Archivo Black";
		font-size: var(--fs-semi-medium);
	}
	.about-section .large-text {
		font-family: "Poppins";
		font-weight: 700;
		font-size: var(--fs-large);
	}

	@media (max-width: 380px) {
		.about-section .large-text {
			font-size: var(--fs-semi-large);
		}
	}

	.about-section ul li {
		font-size: var(--fs-semi-medium);
		list-style: circle;
	}
	@media (max-width: 599px) {
		.about-section ul li {
			font-size: var(--fs-mid-medium);
			list-style: square;
		}
	}

	.about-section p {
		font-size: var(--fs-mid-medium);

		padding-bottom: 2%;
	}

	@media (min-width: 800px) {
		.about-section p {
			font-size: var(--fs-semi-medium);
		}
	}

	.about-section .go-to-home-link {
		text-decoration: underline;
		font-size: var(--fs-semi-medium);
	}

	.about-section .go-to-home-link:hover {
		font-size: var(--fs-semi-medium);

		color: var(--light-grey-color);
	}
</style>
