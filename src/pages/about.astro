---
import BaseLayout from "../layouts/BaseLayout.astro";
import "../css/index.css";
const title = "About - Ekeopre Beredugo";
const description =
	"Ekeopre Beredugo is a frontend web developer that specializes in creating quality high converting websites.";
const author = "Ekeopre Beredugo";
const scrollToTop = "#about";
---

<BaseLayout
	title={title}
	description={description}
	author={author}
	scrollToTop={scrollToTop}
>
	<main class="wrapper" id="about">
		<h1 class="main-title">About</h1>
		<p class="about-me">
			I'm a self taught front end developer from Nigeria that has a strong
			background using HTML, CSS, and JavaScript for creating
			visually appealing user-friendly web applications. I've been building websites since 2020 and I have also gained valuable
			experience using a range of other modern web technologies and frameworks such as React and Astro. <br><br> I'm always seeking to learn, knowledge and improve my
			skills, and I am aso excited about the opportunity to join a dynamic and
			innovative team where I can make contributions to the
			development process. <br /><br />
			<a href="/">Go to homepage</a>
		</p>
	</main>
</BaseLayout>

<style>
	* {
		padding: 0;
		margin: 0;
		box-sizing: border-box;
	}

	.dark {
		background-color: var(--darkTheme-color);
		color: #ffffff;
	}

	/* archivo-black-regular - latin */
	@font-face {
		font-family: "Archivo Black";
		font-style: normal;
		font-weight: 400;
		src: url("/assets/fonts/archivo-black-v17-latin/archivo-black-v17-latin-regular.eot"); /* IE9 Compat Modes */
		src: local(""),
			url("/assets/fonts/archivo-black-v17-latin/archivo-black-v17-latin-regular.eot?#iefix")
				format("embedded-opentype"),
			/* IE6-IE8 */
				url("/assets/fonts/archivo-black-v17-latin//archivo-black-v17-latin-regular.woff2")
				format("woff2"),
			/* Super Modern Browsers */
				url("/assets/fonts/archivo-black-v17-latin/archivo-black-v17-latin-regular.woff")
				format("woff"),
			/* Modern Browsers */
				url("/assets/fonts/archivo-black-v17-latin//archivo-black-v17-latin-regular.ttf")
				format("truetype"),
			/* Safari, Android, iOS */
				url("/assets/fonts/archivo-black-v17-latin//archivo-black-v17-latin-regular.svg#ArchivoBlack")
				format("svg"); /* Legacy iOS */
	}

	html {
		width: 100%;
	}

	body {
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		width: 100%;
		height: 100%;
	}

	.wrapper h1 {
		color: #0a1926;

		margin: 20px auto;
		font-family: "Archivo Black";
		text-transform: uppercase;
		font-size: 3.5rem;
	}

	.wrapper p {
		font-size: 18px;
	}

	.wrapper p a {
		color: var(--darkTheme-color);
		text-decoration: underline;
	}
	@media (min-width: 800px) {
		.wrapper {
			margin: 0 20%;
		}
		.wrapper p {
			font-size: 20px;
		}
	}
	@media (max-width: 1250px) {
		.wrapper h1 {
			font-size: 3rem;
		}
	}

	@media (max-width: 820px) {
		.wrapper {
			margin: 5% 0;
		}
		.wrapper h1 {
			font-size: 30px;
		}
	}

	@media (max-width: 599px) {
		.wrapper {
			margin: 30% 1.5rem;
		}
		.wrapper h1 {
			font-size: 25px;
		}
	}

	@media (min-width: 600px) {
		.wrapper {
			padding: 10% 3rem;
		}
	}
</style>
