---


const portfolioCards = [

{
imgUrl: "/assets/img/praize-img.webp",
technology: " CSS, Bootstrap, Javascript",
description: "This is website for a jewelry store where users can order through the contacts available on the website. It was built with HTML, Bootstrap and CSS",
animation: " card animate__animated animate__fadeInUp",
webUrl:  "https://praizecollectables.vercel.app/",
gitUrl: "https://github.com/Thebuilderekes/shop"
},

{
imgUrl: "/assets/img/jackson-img.webp",
technology: " HTML, CSS, Javascript",
description: "An Actors/Artist's website built with HTML, Bootstrap, CSS and JavaScript. The responsive navigation menu was custom made using JavaScript DOM manipulation. The Idea behind this project was to have a gallery to display the actor's works and guide visitors to his social media pages. ",
animation: " card animate__animated animate__fadeInUp",
webUrl: "https://jackson-tan.vercel.app",
gitUrl: "https://github.com/Thebuilderekes/jackson"
},

{
imgUrl: "/assets/img/kombo-img.webp",
technology: " CSS, TailwindCSS, Javascript",
description: "A project website for an A&R manager that is built using HTML, TailwindCSS, CSS and JavaScript. The custom responsive navigation menu was custom made using JavaScript DOM manipulation.",
animation: " card animate__animated animate__fadeInUp",
webUrl: "https://kombojmg.vercel.app",
gitUrl: "https://github.com/Thebuilderekes/kombo"
}

]
---

<section class="portfolio" id="portfolio">
  <h2>PORTFOLIO</h2>
  <div class="design-text">PORTFOLIO</div>
  <div class="card-container">
    {portfolioCards.map(portfolioCard =>
    <div class={portfolioCard.animation}>
        <figure>
          <img src={portfolioCard.imgUrl} alt="portfolio card" />
        </figure>
      <p><span>Technologies used:</span> {portfolioCard.technology}</p>
      <p>{portfolioCard.description}</p>
      <div class ="btn-group">
        <a href={portfolioCard.webUrl} target = "_blank" role="link">VISIT WEBSITE</a>   
        <a class="github-btn" href={portfolioCard.gitUrl} target = "_blank" role="link">GITHUB</a>   
        
        </div>
    </div>
    )
    }
  </div>
</section>

<style>
