---
import "animate.css";

const skillCards = [
	
		{
			icon: "https://api.iconify.design/logos:figma.svg",
			animation: "card animate__animated animate__fadeInUp delay-1",
			title: "Figma",
			alt: "Figma logo",
		},

		{
			icon: "https://api.iconify.design/vscode-icons:file-type-reactjs.svg ",
			animation: "card animate__animated animate__fadeInUp delay-2",
			title: "React",
			alt: "React logo",
		},
	

	
		{
			icon: "https://api.iconify.design/logos:tailwindcss.svg",
			animation: "card animate__animated animate__fadeInUp delay-3",
			title: "TailwindCSS",
			alt: "tailwindCSS logo",
		},

		{
			icon: "https://api.iconify.design/logos:javascript.svg",
			animation: "card animate__animated animate__fadeInUp delay-4",
			title: "Javascript",
			alt: "JavaScript logo",
		},
	

	
		{
			icon: "https://api.iconify.design/logos:astro.svg",
			animation: "card animate__animated animate__fadeInUp delay-5",
			title: "Astro",
			alt: "Astro logo",
		},

		{
			icon: "https://api.iconify.design/logos:wordpress.svg",
			animation: "card animate__animated animate__fadeInUp delay-6",
			title: "WordPress",
			alt: "Wordpress logo",
		},
	
];
---

<style>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	.dark {
		background-color: var(--darkTheme-color);
		color: #ffffff;
	}

	/*ANIMATION STYLES FOR SKILL CARDS*/
	.animate__animated.animate__fadeInUp.delay-1 {
		--animate-duration: 2s;
	}

	.animate__animated.animate__fadeInUp.delay-2 {
		--animate-duration: 3s;
	}

	.animate__animated.animate__fadeInUp.delay-3 {
		--animate-duration: 4s;
	}

	.animate__animated.animate__fadeInUp.delay-4 {
		--animate-duration: 5s;
	}

	.animate__animated.animate__fadeInUp.delay-5 {
		--animate-duration: 6s;
	}

	.animate__animated.animate__fadeInUp.delay-6 {
		--animate-duration: 7s;
	}

	/*SKILL SECTION STYLES*/

	.skills {
		background-color: #d1daf8;
		padding: 7rem 2rem;
		position: relative;
	}

	@media (min-width: 1400px) {
		.skills {
			padding: 7rem 3rem;
			background-color: #d1daf8;
		}
	}

	@media (max-width: 800px) {
		.skills {
			padding: 4rem 1rem;
		}
	}

	.skills h2 {
		padding-bottom: 4rem;
		--animate-duration: 6s;
		color: #3535c4;
		font-size: var(--fs-section-h2-mobile);
		font-weight: 600;

		text-align: center;
	}

	@media (min-width: 800px) {
		.skills h2 {
			font-size: var(--fs-large);
			padding-bottom: 3rem;
		}
	}

	/* SKILLS CARD STYLES*/
	.skills .card-container {
		display: grid;
		padding-top: 3rem;
		grid-template-columns: repeat(3, 1fr);
		grid-template-rows: repeat(1, 1fr);
		grid-column-gap: 3rem;
		grid-row-gap: 0px;
		/* margin-top: 20px; */
	}

	@media (max-width: 600px) {
		.skills .card-container {
			display: grid;
			grid-template-columns: repeat(2, 1fr);
			grid-template-rows: repeat(3, 1fr);
			grid-column-gap: 20px;
			grid-row-gap: 0px;
		}
	}
	.skills .card-container .card {
		text-align: center;
		border-radius: 16px;
		padding: 0.8rem;
		margin: 2rem 0;
		background-color: #f3f3ff;
		box-shadow: 10px 7px 21px -7px rgba(219, 213, 232, 0.75);
		-webkit-box-shadow: 10px 7px 21px -7px rgba(219, 213, 232, 0.75);
		-moz-box-shadow: 10px 7px 21px -7px rgba(219, 213, 232, 0.75);
	}

	.skills .card-container .card img {
		text-align: center;
		margin: 0 auto;
		color: #9ea3e7;
		width: 100px;
		height: 100px;
	}

	.skills .card-container .card h3 {
		padding-top: 10px;
		font-family: "Poppins";
		font-size: 20px;
		color: var(--accent-color);
	}
</style>

<section class="skills" id="skills">
	<h2 class="animate__animated animate__fadeInUp">SKILLS & TECH</h2>
	<div class="card-container">
		{
			skillCards.map((skillCard) => (
				<div class={skillCard.animation} id="card">
					<img src={skillCard.icon} alt={skillCard.alt} />
					<h3>{skillCard.title}</h3>
				</div>
			))
		}

	</div>
</section>
