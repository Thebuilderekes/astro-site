    .works .card-container .card {
        width: 100%;
}

}

.works .card-container .card figure {
    width: 100%;
}


.works .card-container .card figure img {
  border-radius : 16px;
  width: 100%;
}

.works .card-container .card p {
    font-size: 0.8rem;
    line-height: 1.5;
    text-align: left;
    padding: 0.9rem 0;
    display: block;
}


